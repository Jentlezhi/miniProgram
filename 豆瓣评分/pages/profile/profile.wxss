/* pages/profile/profile.wxss */
page{
    height: 100%;
}
.container {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.login-wrapper{
    width: 100%;
    height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    /*子绝父相*/
    position: relative;
}
.bg{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}
.login{
    width: 490rpx;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    background-color: #fff;
    border-radius: 60rpx;
    color: #244623;
    font-size: 50rpx;
}
.blank {
    flex-grow: 1;
    min-height: 50rpx;
}
.version{
    color: #C8C8C8;
    text-align: center;
    width: 100%;
    font-size: 24rpx;
    margin-top: 30rpx;
    margin-bottom: 60rpx;
}
.title-wrapper{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    /* background-color: blueviolet; */
    display: flex;
    flex-direction: row;
}

.title-wrapper .title{
    color: #000;
    font-size: 40rpx;
    margin-left: 30rpx;    
}
.btn-title {
    position: absolute;
    right: 30rpx;
    color: #797979;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}
.items-wrapper .arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 15rpx;
    border-right: #7f7f7f solid 4rpx;
    border-bottom: #7f7f7f solid 4rpx;
    transform: rotate(-45deg);
}

.items{
    padding: 0 30rpx;
}
.item {
    display: flex;
    align-items: center;
    position: relative;
    margin-top: 50rpx;
}
.item image{
    width: 65rpx;
    height: 65rpx;
}
.item .title{
    color: #1C1C1C;
    font-size: 30rpx;
}
.analysis-wrapper{
    margin-left: 40rpx;
}
.analysis-wrapper .title{
    margin-bottom: 10rpx;
}
.count-wrapper{
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}
.count-wrapper .count{
    color: #797979;
    font-size: 45rpx;
}
.count-wrapper .count-desc{
    color: #797979;
    font-size: 26rpx;
    margin-left: 10rpx;
    margin-bottom: 8rpx;
}
.movie-wrapper{
    margin-left: 40rpx;
}
.movie-wrapper .desc{
    color: #C0C0C0;
    font-size: 30rpx;
}
.btn-wrapper {
    display: flex;
    align-items: center;
    flex-grow: 1;
    justify-content: flex-end;
}
.btn-wrapper .btn {
    background-color: #f5f5f5;
    padding: 5rpx 15rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}
.item .line{
    height: 1rpx;
    width: 100%;
    background-color:rgba(0, 0, 0, 0.1);
    position: absolute;
    bottom: -30rpx;
}