/* components/movie-item.wxss */
.container {
  display: inline-flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 200rpx;
}
.cover{
  width: 100%;
  height: 300rpx;
  border: 4rpx solid #f2f2f2;
  border-radius: 8rpx;
}

.name{
  color: #494949;
  margin-top: 5rpx;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  /*文字过长显示省略*/
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.star-wrapper {
  display: flex;
  align-items: center;
}
.star-wrapper .star{
  width: 30rpx;
  height: 30rpx;
}

.star-wrapper .score {
  margin-left: 10rpx;
  color: #868686;
  font-size: 26rpx;
}