<!--components/nav-bar/nav-bar.wxml-->
<view class="container">
  <view class="status-bar" style="{{ statusBarStyle }}"></view>
  <view class="nav-bar-wrapper" style="{{ navBarStyle }}">
     <view class="icons">
        <image bind:tap="back" wx:if="{{showBack == true}}" class="back" src="/assets/imgs/nav_back.png" mode="aspectFit" />
        <image bind:tap="home" wx:if="{{showHome == true}}" class="home" src="/assets/imgs/nav_home.png" mode="aspectFit" />
     </view>
     <view class="title" style="color:{{ titleColor }}">{{ title }}</view>
  </view>
</view>
